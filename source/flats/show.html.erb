<% flat = data.flats[owner] %>
<div style="margin: 70px">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-sm-offset-3 col-sm-6">
				<div class="card" style="background-image: url('<%= image_path flat.picture %>');">
					<div class="card-category"><%= flat.city %></div>
					<div class="card-description">
						<h2><%= flat.name %></h2>
						<p><%= flat.summary %></p>
					</div>
					<div class="card-rating">
						<%flat.rating.times do %>
						<li class="fa fa-star star-shadow" style=" color: gold"></li>
						<%end%>
						<%(5 - flat.rating).times do %>
						<li class="fa fa-star-o star-shadow" style=" color: gold"></li>
						<%end%>
					</div>
					<%= image_tag flat.owner_picture, class:"card-user avatar avatar-large" %>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="map" style="width: 100%; height: 400px;"></div>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<script type="text/javascript">
var myLatlng = new google.maps.LatLng(<%= flat.lat %>,<%= flat.long %>);

	var myOptions = {
		zoom: 16,
		center: myLatlng,
		scrollwheel: false,
		mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles: [] // TODO: replace [] by array from https://snazzymaps.com/
    };

    var map = new google.maps.Map(document.getElementById('map'), myOptions);
    var marker = new google.maps.Marker({
    	position: myLatlng,
    	map: map,
    	title: "You are here!"
    });
</script>
